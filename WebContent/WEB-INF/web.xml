<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>userServiceServlet</servlet-name>
		<servlet-class>com.caucho.hessian.server.HessianServlet
		</servlet-class>
		<init-param>
			<param-name>service-class</param-name>
			<param-value>com.file.service.impl.UserServiceImpl</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>userServiceServlet</servlet-name>
		<url-pattern>/user/userServiceServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>fileUpService</servlet-name>
		<servlet-class>com.caucho.hessian.server.HessianServlet
		</servlet-class>
		<init-param>
			<param-name>service-class</param-name>
			<param-value>com.file.service.impl.FileUpServiceImpl</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>fileUpService</servlet-name>
		<url-pattern>/file/fileUpService</url-pattern>
	</servlet-mapping>
	
	
	<welcome-file-list>
		<welcome-file>jsp/index.jsp</welcome-file>
	</welcome-file-list>
</web-app>